<div class="chat-header">
    <div class="title">
        Chat2Report
    </div>
    <div class="actions">
        @if (ShowNewChatButton)
        {
            <button class="new-chat-button" @onclick="OnNewChat" title="New Chat">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="new-chat-icon">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>Започни нов разговор
            </button>
        }
    </div>
</div>

@code {
    [Parameter] public EventCallback OnNewChat { get; set; }
    [Parameter] public bool ShowNewChatButton { get; set; }
}